# YouTube Data API v3 Key (Free - 10,000 units/day)
# Get your free key: https://console.cloud.google.com/apis/credentials
# Enable: YouTube Data API v3
YOUTUBE_API_KEY=your_youtube_api_key_here

# RapidAPI Key (for TikTok via Scraptik - Free tier)
# Get your free key: https://rapidapi.com/scraptik-api-scraptik-api-default/api/scraptik
# Optional: Can be set via UI in production
RAPIDAPI_KEY=your_rapidapi_key_here

# Database
DATABASE_PATH=./data/trends.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Ingestion Settings
TRENDING_REGION_CODE=US
MAX_TRENDING_RESULTS=50
MAX_SEARCH_RESULTS=50
SEARCH_PUBLISHED_AFTER_HOURS=72

# ML Settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
CLUSTERING_MIN_SAMPLES=3
CLUSTERING_EPS=0.3
DEDUP_SIMILARITY_THRESHOLD=0.95

# Feature Engineering
FRESHNESS_DECAY_HOURS=48
ENGAGEMENT_WEIGHTS_LIKES=1.0
ENGAGEMENT_WEIGHTS_COMMENTS=2.0
